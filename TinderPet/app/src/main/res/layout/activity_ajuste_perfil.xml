<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White"
    tools:context=".homeUsuario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/White"
            android:drawableLeft="@drawable/ic_voltar"
            android:drawableTint="@color/Red"
            android:padding="20dp"
            android:paddingLeft="20dp"

            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/Red"
            android:visibility="visible"
            android:layout_marginVertical="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="8"
            android:background="@color/White"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="10dp"
            android:drawableTint="@color/Red"
            android:padding="20dp"
            android:text="Perfil de Usuário"
            android:textColor="@color/Red"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Red"
        android:visibility="visible"
        android:layout_marginHorizontal="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/ic_circle_user" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/ic_circle_user" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/ic_circle_user" />
    </LinearLayout>

    <EditText
        android:id="@+id/edt_nome"
        style="@style/EditTextBasic"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:hint="Nome"
        android:drawableLeft="@drawable/ic_user"
        />

    <EditText
        android:id="@+id/edt_numero"
        style="@style/EditTextBasic"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:hint="Numero de Celular"
        android:drawableLeft="@drawable/ic_telefone"
        />

    <EditText
        android:id="@+id/edt_cidade"
        style="@style/EditTextBasic"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:hint="Cidade"
        android:drawableLeft="@drawable/ic_local"
        />

    <TextView
        style="@style/TextBasic"
        android:text="Espaço em sua residência"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        />

    <SeekBar

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:progress="30"
        android:progressTint="@color/Blue"
        />

    <TextView
        style="@style/TextBasic"
        android:text="30m^2"
        android:layout_gravity="right"
        android:layout_marginHorizontal="20dp"
        />

    <EditText
        android:id="@+id/edt_descricao"
        style="@style/EditTextBasic"
        android:layout_height="120dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:hint="Descrição"
        android:lineSpacingMultiplier="30" />

</LinearLayout>