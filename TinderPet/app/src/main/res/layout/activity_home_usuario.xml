<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White"
    tools:context=".homeUsuario">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_circle_user"
        />

    <Button
        android:id="@+id/btn_login"
        style="@style/ButtonGreen"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:text="Ajuste de perfil"
        android:textSize="15sp"
        android:drawableLeft="@drawable/ic_edit_user"
        android:drawableTint="@color/Green"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="20dp">

        <Button
            style="@style/ButtonGrade"
            android:text="Quero Adotar"
            android:layout_weight="4"
            android:drawableLeft="@drawable/ic_edit_heart"
            android:drawableTint="@color/Red"
            android:layout_gravity="center_horizontal"/>
        <Button
            style="@style/ButtonGrade"
            android:text="Quero Doar"
            android:layout_weight="4"
            android:drawableLeft="@drawable/ic_pata"
            android:drawableTint="@color/Red"/>

        <Button
            style="@style/ButtonGrade"
            android:text="Sair"
            android:textColor="@color/Blue"
            android:layout_weight="2"
            android:textSize="15sp"/>


    </LinearLayout>

</LinearLayout>