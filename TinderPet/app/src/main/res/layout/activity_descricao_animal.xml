<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    tools:overrideLibrary="com.jaygoo.widget"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:rsb="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White"
    tools:context=".fire">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:drawableBottom="@drawable/ic_voltar"
        android:drawableTint="@color/Black"
        android:padding="10dp"
        />




    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:id="@+id/img"
                android:scaleType="center"
                android:background="#fff"
                android:src="@mipmap/ic_pet"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_nomeIdade"
                    style="@style/TextBasic"
                    android:text="NOME, IDADE"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"/>
                <TextView
                    android:id="@+id/txt_castrado"
                    style="@style/TextBasic"
                    android:text="É castrado"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/Red"
                    android:layout_marginHorizontal="20dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_cidade"
                style="@style/TextBasic"
                android:text="CIDADE"
                android:layout_marginTop="5dp"
                android:textColor="@color/Red"
                android:layout_marginHorizontal="20dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Red"
                android:visibility="visible"
                android:layout_marginHorizontal="10dp"/>

            <TextView
                style="@style/TextBasic"
                android:layout_margin="10dp"
                android:text="Descrição"/>
            <TextView
                android:id="@+id/txt_descricao"
                style="@style/EditTextBasic"
                android:layout_margin="10dp"
                android:textColor="@color/Black"
                android:text="..."/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>