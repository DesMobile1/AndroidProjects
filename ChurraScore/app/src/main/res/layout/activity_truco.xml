<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Truco">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TRUCO"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textColor="@color/verdeagua"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time1"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bdtext"
            android:clickable="true"
            android:contextClickable="true"
            android:inputType="none"
            android:text="TIME 1"
            android:textAlignment="center"
            android:cursorVisible="false"/>

        <TextView
            android:id="@+id/time2"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bdtext"
            android:clickable="true"
            android:contextClickable="true"
            android:inputType="none"
            android:text="TIME 2"
            android:textAlignment="center"
            android:cursorVisible="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/placar1"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:text="0"
            android:textSize="100dp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="22dp"
            android:background="@drawable/bdtext"
            android:textColor="@color/verdeagua"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="40dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/placar2"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:text="0"
            android:textSize="100dp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bdtext"
            android:textColor="@color/verdeagua"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VITORIAS: 0"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="45dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VITORIAS: 0"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="85dp"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:focusable="false"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:focusable="false" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="ADICIONAR PONTOS:"
        android:textSize="18dp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/botao1"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:text="+1"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/bdcolor"
            />

        <Button
            android:id="@+id/botao2"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:text="-1"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/bdcolor"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/botao3"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="+3"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/bdcolor"
            />

        <Button
            android:id="@+id/botao4"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="+6"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bdcolor"
            />

        <Button
            android:id="@+id/botao5"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="+9"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bdcolor"
            />

        <Button
            android:id="@+id/botao6"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="+12"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bdcolor"
            />
    </LinearLayout>

</LinearLayout >