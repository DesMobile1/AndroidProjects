<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ChurraScore"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="60dp"
        android:textColor="@color/verdeagua"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70dp"/>

    <Button
        android:id="@+id/buttonPebolim"
        android:text="Pebolim"
        android:background="@drawable/bdtext"
        android:textColor="@color/verdeagua"
        android:textStyle="bold"
        android:layout_height="45dp"
        android:layout_width="200dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="90dp"/>

    <Button
        android:id="@+id/buttonFutebol"
        android:text="Futebol"
        android:background="@drawable/bdtext"
        android:textColor="@color/verdeagua"
        android:textStyle="bold"
        android:layout_height="45dp"
        android:layout_width="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="90dp"/>

    <Button
        android:id="@+id/buttonTruco"
        android:text="Truco"
        android:background="@drawable/bdtext"
        android:textColor="@color/verdeagua"
        android:textStyle="bold"
        android:layout_height="45dp"
        android:layout_width="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="90dp"/>

</LinearLayout>