<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonMenor">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">30dp</item>
        <item name="android:background">@drawable/bdcolor</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="buttonMaior">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">30dp</item>
        <item name="android:background">@drawable/bdcolor</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="buttonChange">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/bdcolor</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="textVit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="textAdd">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="textPlacar">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:background">@drawable/bdtext</item>
        <item name="android:textColor">@color/verdeagua</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">100dp</item>
    </style>

    <style name="textX">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">40dp</item>
        <item name="android:text">X</item>
    </style>

    <style name="textJogo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/verdeagua</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textTime">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/bdtext</item>
        <item name="android:clickable">true</item>
        <item name="android:inputType">none</item>
        <item name="android:cursorVisible">false</item>
    </style>

</resources>
